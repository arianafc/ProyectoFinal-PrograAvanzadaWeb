@model SIGEP_ProyectoFinal.Models.Usuario

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<input type="hidden" id="TempError" value="@TempData["SwalError"]" />
<input type="hidden" id="TempSuccess" value="@TempData["SwalSuccess"]" />


<section class="gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-8 col-xl-6">
                <div class="card cardLogin" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 ">CREA TU CUENTA</h2>
                            <hr />
                            <form id="RegistroForm" method="post" asp-action="Registro" asp-controller="Home" class="custom-form container mt-4">
                                <div class="row g-3">
                                    <!-- Cédula - Nombre -->
                                    <div class="col-md-6">
                                        <div class="input-icon-container mb-3">
                                            <i class="fas fa-id-card"></i>
                                            <input type="text" id="CedulaRegistro" name="Cedula" asp-for="Cedula" placeholder="Ingresa tu cédula" class="input-field" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="input-icon-container mb-3 disabled-field">
                                            <i class="fas fa-users"></i>
                                            <input type="text"
                                                   id="NombreRegistro"
                                                   name="Nombre"
                                                   asp-for="Nombre"
                                                   placeholder="Nombre"
                                                   class="input-field"
                                                   readonly />
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="input-icon-container mb-3 disabled-field">
                                            <i class="fas fa-user"></i>
                                            <input type="text"
                                                   id="Apellido1Registro"
                                                   name="Apellido1"
                                                   asp-for="Apellido1"
                                                   placeholder="Primer Apellido"
                                                   class="input-field"
                                                   readonly />
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="input-icon-container mb-3 disabled-field">
                                            <i class="fas fa-user"></i>
                                            <input type="text"
                                                   id="Apellido2Registro"
                                                   name="Apellido2"
                                                   asp-for="Apellido2"
                                                   placeholder="Segundo Apellido"
                                                   class="input-field"
                                                   readonly />
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="input-icon-container mb-3">
                                            <i class="fas fa-briefcase"></i>
                                            <select asp-for="IdEspecialidad" id="EspecialidadRegistro" class="input-field"
                                                    asp-items="@(new SelectList(Model.ListaEspecialidades, "IdEspecialidad", "Nombre"))">
                                                <option value="">Especialidad</option>
                                            </select>
                                        </div>
                                    </div>

                                    <!-- Sección -->
                                    <div class="col-md-6">
                                        <div class="input-icon-container mb-3">
                                            <i class="fas fa-briefcase"></i>
                                            <select asp-for="IdSeccion" id="SeccionRegistro" class="input-field"
                                                    asp-items="@(new SelectList(Model.ListaSecciones, "IdSeccion", "Seccion"))">
                                                <option value="">Sección</option>
                                            </select>
                                        </div>
                                    </div>
                                    <!-- Correo - Fecha de Nacimiento -->
                                    <div class="col-md-12">
                                        <div class="input-icon-container mb-3">
                                            <i class="fas fa-envelope-open"></i>
                                            <input type="email" id="CorreoRegistro" name="Correo" asp-for="Correo" placeholder="Correo Electrónico" class="input-field" autocomplete="off" />
                                        </div>
                                    </div>


                                    <div class="col-md-12">
             
                                        <div class="input-icon-container mb-1" id="FechaNacimientoContainer">
                                            <i class="fas fa-calendar-alt" id="IconoFechaNacimiento"></i>
                                            <input asp-for="FechaNacimiento"
                                                   type="date"
                                                   class="input-field"
                                                   id="FechaNacimientoRegistro"
                                                   />
                                        </div>
                                        <small class="form-text text-muted text-left">Debes ser mayor de 17 años</small>
                                        <span asp-validation-for="FechaNacimiento" class="text-left text-danger"></span>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="input-icon-container mb-3">
                                            <i class="fas fa-key"></i>
                                            <input type="password" id="ContrasennaRegistro" name="Contrasenna" asp-for="Contrasenna" placeholder="Ingresa tu contraseña" class="input-field password-input" />
                                            <i class="fas fa-eye-slash toggle-password"></i>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="input-icon-container mb-3">
                                            <i class="fas fa-key"></i>
                                            <input type="password" id="ContrasennaConfirmar" name="ConfirmarContrasenna" asp-for="ConfirmarContrasenna" placeholder="Confirmar contraseña" class="input-field password-input" />
                                            <i class="fas fa-eye-slash toggle-password"></i>
                                        </div>
                                    </div>
                                
                                <br />
                                <div class="text-center mt-4">
                                    <button id="IniciarSesionBTN" class="btnInicio btn btn-lg px-5" type="submit">
                                        Registrarse
                                    </button>
                                </div>
                            </form>


                        </div>
                        <br />
                        <div>
                            <p class="mb-0">
                                ¿Ya tienes una cuenta? <a asp-action="IniciarSesion" asp-controller="Home" class="text-white-50 fw-bold">Iniciar Sesión</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <script src="~/js/registro/registro.js"></script>
    <script src="~/js/script.js"></script>
   

}
