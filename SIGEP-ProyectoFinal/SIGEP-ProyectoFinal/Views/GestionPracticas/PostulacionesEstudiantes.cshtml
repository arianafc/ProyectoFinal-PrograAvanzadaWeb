@model VacantesViewModel

@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    ViewBag.Title = "Mis Postulaciones";
    var rol = ViewBag.Rol;
    var nombre = ViewBag.Nombre as string;
    var usuario = ViewBag.IdUsuario;

}

<div class="postulaciones-wrapper">
    <h4 class="section-title mb-4">Mis Postulaciones</h4>

    @if (Model?.Postulaciones != null && Model.Postulaciones.Any())
    {
        foreach (var postulacion in Model.Postulaciones)
        {
            <div class="card-postulacion">
                <div class="postulacion-info">
                    <h5 class="vacante-title">@postulacion.NombreVacante</h5>

                    <div class="postulacion-meta row">
                        <span class="empresa col-md-12 mt-1">
                            <i class="fas fa-building me-1"></i>
                            @postulacion.Empresa 
                        </span>

                        <span class="fecha col-md-12 mt-1">
                            <i class="fas fa-calendar-alt me-1"></i>
                            @(postulacion.FechaAplicacion?.ToString("dd/MM/yyyy") ?? "Sin fecha")
                        </span>

                    </div>
                    
                    <span class="estado-badge mt-2 estado-@postulacion.EstadoDescripcion.Replace(" ", "")">
                        @postulacion.EstadoDescripcion
                    </span>
                </div>

                <a class="btn btn-outline-verde btn-ver-postulacion"
                   href="@Url.Action("VisualizacionPostulacion", "Practicas",
                                      new { idVacante = postulacion.IdVacante, idUsuario = postulacion.IdUsuario })"
           title="Ver detalle">
            <i class="fas fa-eye"></i>
        </a>
    </div>
        }
    }
    else
    {
        <div class="alert alert-info d-flex align-items-center">
            <i class="fas fa-info-circle me-2"></i>
            No tienes postulaciones registradas. 
        </div>
    }
</div>


